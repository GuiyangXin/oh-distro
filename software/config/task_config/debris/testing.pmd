group "0.development" {
    cmd "robot_deputy" {
        exec = "bot-procman-deputy -n robot";
        host = "localhost";
    }
    cmd "deputy" {
        exec = "bot-procman-deputy -n base";
        host = "localhost";
    }
}


group "a.1.core" {

    cmd "viewer" {
        exec = "drc-viewer";
        host = "robot";
    }
    cmd "pserver" {
        exec = "bot-param-server $DRC_BASE/software/config/drc_robot_02.cfg";
        host = "robot";
    }
    cmd "affordance-gaze" {
        exec = "affordance-gaze";
        host = "robot";
    }
    cmd "affordance_server" {
      exec = "affordance_server";
      host = "robot";
    }
    cmd "state-pub" {
       exec = "drc-fake-robot-state";
        host = "robot";
    }
    cmd "j2f" {
       exec = "drc-joints2frames -b -g";
        host = "robot";
    }
}

group "b.2.planners" {
    cmd "ReachingPlanner" {
       exec = "matlab -nosplash -nodesktop -r \"addpath_control; cd([getenv('DRC_PATH'),'/control/matlab/planners/atlas_keyframe_planners']); runKeyFramePlannersLCMBase(2);\"";
       host = "base";
    }
    cmd "GazePlanner" {
       exec = "matlab -nosplash -nodesktop -r \"addpath_control; cd([getenv('DRC_PATH'),'/control/matlab/planners']); runPalmGazePlanner();\"";
       host = "base";
    }
    cmd "fakepool" {
       exec = "drc-fake-grasp-pool";
       host = "base";
    }
    cmd "print_xyz_yaw" {
       exec = "affordance_debris_util";
       host = "base";
    }
    cmd "mfallon_grasp_planner" {
       exec = "affordance_to_grasp_plan";
       host = "base";
    }
    cmd "hand_cloud" {
        exec = "hand_cloud";
        host = "base";
    }
}


group "a.3.models" {   
    cmd "model_LP_RR" {
        exec = "robot_model_publisher -u $DRC_BASE/software/models/mit_gazebo_models/mit_robot/model_LP_RR.urdf";
        host = "robot";
    }
    cmd "model_LI_RR" {
        exec = "robot_model_publisher -u $DRC_BASE/software/models/mit_gazebo_models/mit_robot/model_LI_RR.urdf";
        host = "robot";
    }
    cmd "model_LI_RR_extender" {
        exec = "robot_model_publisher -u $DRC_BASE/software/models/mit_gazebo_models/mit_robot/model_LI_RR_extender.urdf";
        host = "robot";
    }
    cmd "model_LH_RH" {
        exec = "robot_model_publisher -u $DRC_BASE/software/models/mit_gazebo_models/mit_robot/model_LH_RH.urdf";
        host = "robot";
    }
    cmd "model_LP_RP" {
        exec = "robot_model_publisher -u $DRC_BASE/software/models/mit_gazebo_models/mit_robot/model_LP_RP.urdf";
        host = "robot";
    }
    cmd "model_LQ_RP" {
        exec = "robot_model_publisher -u $DRC_BASE/software/models/mit_gazebo_models/mit_robot/model_LQ_RP.urdf";
        host = "robot";
    }
}


group "b.4.populate_affs" {
    cmd "populate_debris_affs" {
       exec = "affordance_init -e 9";
       host = "base";
    }
    cmd "populate_firehose" {
       exec = "affordance_init_relative -a 4";
       host = "base";
    }
}





script "prep_LP_RR_valve" { 
    start group "0.development";
    start group "a.1.core";
    start group "b.2.planners";
    start cmd "model_LP_RR";
}

