<?xml version="1.0"?>

<robot name="sandia_hand"
       xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="base_links" params="side">
   <link name="world">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
   <link name="${side}_base_x">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
   <link name="${side}_base_y">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
   <link name="${side}_base_z">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
   <link name="${side}_base_roll">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
   <link name="${side}_base_pitch">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
   <link name="${side}_base_yaw">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="real_base_x" type="prismatic">
      <axis xyz="1 0 0"/>
      <parent link="world"/>
      <child link="${side}_base_x"/>
      <limit lower="-10" upper="10" effort="1" velocity="1"/>
      <!-- <safety_controller soft_lower_limit="${-1.57079-10.0}" soft_upper_limit="${1.57079+10.0}" k_position="1000.0" k_velocity="1000.0"/> -->
      <dynamics damping="0.1"/>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
    </joint>
    <joint name="real_base_y" type="prismatic">
      <axis xyz="0 1 0"/>
      <parent link="${side}_base_x"/>
      <child link="${side}_base_y"/>
      <limit lower="-10" upper="10" effort="1" velocity="1"/>
      <!-- <safety_controller soft_lower_limit="${-1.57079-10.0}" soft_upper_limit="${1.57079+10.0}" k_position="1000.0" k_velocity="1000.0"/> -->
      <dynamics damping="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <joint name="real_base_z" type="prismatic">
      <axis xyz="0 0 1"/>
      <parent link="${side}_base_y"/>
      <child link="${side}_base_z"/>
      <limit lower="-10" upper="10" effort="1" velocity="1"/>
      <!-- <safety_controller soft_lower_limit="${-1.57079-10.0}" soft_upper_limit="${1.57079+10.0}" k_position="1000.0" k_velocity="1000.0"/> -->
      <dynamics damping="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <joint name="real_base_roll" type="revolute">
      <axis xyz="1 0 0"/>
      <parent link="${side}_base_z"/>
      <child link="${side}_base_roll"/>
      <limit lower="-1.57079" upper="1.57079" effort="1" velocity="1"/>
      <safety_controller soft_lower_limit="${-1.57079-10.0}" soft_upper_limit="${1.57079+10.0}" k_position="1000.0" k_velocity="1000.0"/>
      <dynamics damping="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <joint name="real_base_pitch" type="revolute">
      <axis xyz="0 1 0"/>
      <parent link="${side}_base_roll"/>
      <child link="${side}_base_pitch"/>
      <limit lower="-1.57079" upper="1.57079" effort="1" velocity="1"/>
      <safety_controller soft_lower_limit="${-1.57079-10.0}" soft_upper_limit="${1.57079+10.0}" k_position="1000.0" k_velocity="1000.0"/>
      <dynamics damping="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <joint name="real_base_yaw" type="revolute">
      <axis xyz="0 0 1"/>
      <parent link="${side}_base_pitch"/>
      <child link="${side}_base_yaw"/>
      <limit lower="-1.57079" upper="1.57079" effort="1" velocity="1"/>
      <safety_controller soft_lower_limit="${-1.57079-10.0}" soft_upper_limit="${1.57079+10.0}" k_position="1000.0" k_velocity="1000.0"/>
      <dynamics damping="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>
