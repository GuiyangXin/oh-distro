package drc;

// Additional information about the affordance
// note that the actual affordance_t is embedded here for consistency

struct affordance_plus_t
{
  affordance_t aff;

  // Points on the object - relative to the affordance xyzrpy
  int32_t npoints;
  float points[npoints][3];

  // Triangulation of the points - must be triangles for fixed LCM arrays
  // Note: this is compatiable with pcl::PolygonMesh
  int32_t ntriangles;
  int32_t triangles[ntriangles][3];
}
