package drc;

struct heightmap_t
{
  // timestamp of this message
  int64_t utime;

  // size of image
  int32_t nx;
  int32_t ny;
  int32_t npix;

  // scale of each sample
  float scale_x;
  float scale_y;

  // transform from map to reference (local) coords
  double transform_to_local[4][4];

  // height data samples (size nx*ny)
  double heights[npix];
}
