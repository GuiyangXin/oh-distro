<!-- Bringup left_irobot_hand driver-->
<launch>
  
  <arg name="left_hand_name" default="192.168.40.3" />
  
  <node pkg="handle_ros" type="handle_ros" name="handle_ros_left_hand" output="screen" respawn="true">  
    <param name="hand_name" value="$(arg left_hand_name)" type="string"/>
    <param name="hand_port" value="3490" type="string"/>
    <param name="hand_udp" value="false" type="bool"/>
    <remap from="/handle/sensors/raw" to="/irobot_hands/l_hand/sensors/raw"/>
    <remap from="/handle/control" to="/irobot_hands/l_hand/control"/>
    <remap from="/handle/calibrate" to="/irobot_hands/l_hand/calibrate"/>
  </node>

</launch>
